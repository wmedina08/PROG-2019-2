@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model company_web.Models.Producto;
<html>
    <title>Calculo</title>
    <header>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    </header>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <ul class="list-group list-group-flush">
                <li class="list-group-item list-group-item-warning">Reporte:</li>
                <li class="list-group-item">Nombre: @Html.DisplayTextFor(model => model.producto)
                </li>
                <li class="list-group-item">Producto: @Html.DisplayTextFor(model => model.categoria)
                </li>
                <li class="list-group-item">Produccion: @Html.DisplayTextFor(model => model.Production)
                </li>
                <li class="list-group-item">Precio: @Html.DisplayTextFor(model => model.PriceImp)
                </li>
                <br>
                <a href="http://localhost:5000/"><button type="button" class="btn btn-warning">Regresar</button></a> 
            </ul>            
        </div>
        
    </div>


</body>
</html>