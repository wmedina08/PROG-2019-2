@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model student_app.Models.student

<!DOCTYPE html>
<html>
    <header>
    <title>Create</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    </header>
    <body>
        <div class="container" style="margin-top:50px">
          <div class="row justify-content-center">
            <div class="col-8" style="border: black 2px dashed">
              
              <h1 style="color:#0080ff;text-align:center">Formulario</h1><br>
              
              <form asp-controller="Home" asp-action="Registro">
                
                <div class="form-group row">
                  <label class="col-sm-2 col-form-label"><strong>Nombre:</strong></label>
                  <div class="col-sm-3">
                  <input asp-for="nombre" placeholder="Nombre completo"/>
                  </div>
                </div>
                
                <div class="form-group row">
                  <label class="col-sm-2 col-form-label"><strong>Birth:</strong></label>
                  <div class="col-sm-3">
                  <input asp-for="birth"/>
                  </div>
                </div>

                <fieldset class="form-group">
                  <div class="row">
                    <legend class="col-form-label col-sm-2 pt-0"><strong>Hobbie:</strong></legend>
                    <div class="col-sm-3">
                      <div class="form-check">
                        <input asp-for="hobbie" class="form-check-input" type="radio" value="Natación"/>
                        <label>Natación</label>
                      </div>
                      <div class="form-check">
                        <input asp-for="hobbie" class="form-check-input" type="radio" value="Ciclismo"/>
                        <label>Ciclismo</label>
                      </div>
                      <div class="form-check">
                        <input asp-for="hobbie" class="form-check-input" type="radio" value="Guitarra"/>
                        <label>Guitarra</label>
                      </div>
                    </div>
                  </div>
                </fieldset>

                <div class="form-group row">
                  <label class="col-sm-2 col-form-label"><strong>Curso:</strong></label>
                  <div class="col-sm-3">
                  <select asp-for="curso">
                      <option value="Matemática">Matemática</option>
                      <option value="Lenguaje">Lenguaje</option>
                      <option value="Física">Física</option>
                  </select>
                  </div>
                </div>

                <div class="form-group row">
                  <label class="col-sm-2 col-form-label"></label>
                  <div class="col-sm-3">
                  <button type="submit" class="btn btn-primary">REGISTRAR</button>
                  </div>
                </div>

              </form>
            </div>
          </div>
        </div>
    </body>
</html>