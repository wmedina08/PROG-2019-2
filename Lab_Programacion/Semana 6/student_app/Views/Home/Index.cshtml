@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<student_app.Models.student>

<!DOCTYPE html>
<html>
    <header>
    <title>Index</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    </header>
    <body>
        <div class="container" style="margin-top:50px">
          <div class="row justify-content-center">
              <h1 style="color:black;text-align:center">Lista de Estudiante</h1>
              
              <table class="table">
                <thead class="thead-dark">
                  <tr>
                    <th>
                      Nombre
                    </th>
                    <th>
                      Curso
                    </th>
                    <th>
                      Credito
                    </th>
                    <th>

                    </th>
                  </tr>
                </thead>
                <tbody>
                  @foreach (var item in Model)
                  {
                      <tr>
                        <td>
                          @Html.DisplayFor(modelItem =>item.nombre)
                        </td>
                        <td>
                          @Html.DisplayFor(modelItem =>item.curso)
                        </td>
                        <td>
                          @Html.DisplayFor(modelItem =>item.credito)
                        </td>
                        <td>
                        <a asp-action="Detail" asp-route-id="@item.id">Detalle</a>
                        </td>
                      </tr>
                  }
                </tbody>
              </table>
              <a asp-action="Create" class="btn btn-secondary">Registrar Estudiante</a><br>
              </div>
        </div>
    </body>
</html>