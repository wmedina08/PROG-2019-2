@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<student_app.Models.student>

<!DOCTYPE html>
<html>
    <header>
    <title>Index</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    </header>
    <body>
        <div class="container" style="margin-top:50px">
          <div class="row justify-content-center">
              <h1 style="color:#0080ff;text-align:center">Lista de alumnos</h1>
              <a asp-action="Create" class="btn btn-primary">Registrar</a><br>
              
              <!-- crear tabla -->
              <table class="table">
                <thead>
                  <tr>
                    <th>
                      @Html.DisplayNameFor(model => model.nombre)
                    </th>
                    <th>
                      @Html.DisplayNameFor(model => model.curso)
                    </th>
                    <th>
                      @Html.DisplayNameFor(model => model.credito)
                    </th>
                  </tr>
                </thead>
                <tbody>
                  @foreach (var item in Model)
                  {
                      <tr>
                        <td>
                          @Html.DisplayFor(modelItem =>item.nombre)
                        </td>
                        <td>
                          @Html.DisplayFor(modelItem =>item.curso)
                        </td>
                        <td>
                          @Html.DisplayFor(modelItem =>item.credito)
                        </td>
                        <td>
                          <a asp-action="Detail" asp-route-id="@item.id">Detalle</a>
                        </td>
                      </tr>
                  }
                </tbody>
              </table>

              </div>
        </div>
    </body>
</html>